<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_repo_item_height"
    android:layout_margin="@dimen/margin_medium"
    android:padding="@dimen/margin_large">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/text_owner"
        android:layout_width="0dp"
        android:layout_height="@dimen/margin_large"
        android:background="@color/gray_500"
        app:layout_constraintDimensionRatio="5:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/RoundedRectangle" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/text_name"
        android:layout_width="0dp"
        android:layout_height="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@color/gray_500"
        app:layout_constraintDimensionRatio="8:1"
        app:layout_constraintStart_toStartOf="@id/text_owner"
        app:layout_constraintTop_toBottomOf="@id/text_owner"
        app:shapeAppearanceOverlay="@style/RoundedRectangle" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/text_description"
        android:layout_width="0dp"
        android:layout_height="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@color/gray_500"
        app:layout_constraintDimensionRatio="10:1"
        app:layout_constraintStart_toStartOf="@id/text_owner"
        app:layout_constraintTop_toBottomOf="@id/text_name"
        app:shapeAppearanceOverlay="@style/RoundedRectangle" />

</androidx.constraintlayout.widget.ConstraintLayout>