<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_repo_item_height"
    android:layout_marginStart="@dimen/margin_10"
    android:layout_marginTop="@dimen/margin_5"
    android:layout_marginEnd="@dimen/margin_10"
    android:layout_marginBottom="@dimen/margin_10">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_owner"
        android:layout_width="@dimen/image_owner_width"
        android:layout_height="@dimen/image_owner_width"
        android:layout_margin="@dimen/margin_20"
        android:background="@color/gray_500"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/Circle" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/text_owner"
        android:layout_width="0dp"
        android:layout_height="@dimen/margin_20"
        android:layout_marginStart="@dimen/margin_10"
        android:background="@color/gray_500"
        app:layout_constraintBottom_toBottomOf="@id/image_owner"
        app:layout_constraintDimensionRatio="5:1"
        app:layout_constraintStart_toEndOf="@id/image_owner"
        app:layout_constraintTop_toTopOf="@id/image_owner"
        app:shapeAppearanceOverlay="@style/RoundedRectangle" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/text_name"
        android:layout_width="0dp"
        android:layout_height="@dimen/margin_30"
        android:layout_marginTop="@dimen/margin_5"
        android:background="@color/gray_500"
        app:layout_constraintDimensionRatio="6:1"
        app:layout_constraintStart_toStartOf="@id/image_owner"
        app:layout_constraintTop_toBottomOf="@id/image_owner"
        app:shapeAppearanceOverlay="@style/RoundedRectangle" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/text_description"
        android:layout_width="0dp"
        android:layout_height="@dimen/margin_30"
        android:layout_marginTop="@dimen/margin_5"
        android:background="@color/gray_500"
        app:layout_constraintDimensionRatio="10:1"
        app:layout_constraintStart_toStartOf="@id/image_owner"
        app:layout_constraintTop_toBottomOf="@id/text_name"
        app:shapeAppearanceOverlay="@style/RoundedRectangle" />

</androidx.constraintlayout.widget.ConstraintLayout>