<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.GitFinder" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Status bar color -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- Window status bar style -->
        <item name="android:windowLightStatusBar">true</item>
        <!-- Window cutout mode -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <!-- Colors -->
        <item name="colorPrimary">@color/gray_700</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/gray_500</item>
        <item name="colorSecondaryVariant">@color/gray_500</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSurface">@color/gray_700</item>
        <item name="android:colorBackground">@color/black</item>
    </style>
</resources>